@model MidTermSolution.Models.Room

@{
    ViewBag.Title = "Room Details";
}

<h2>Room Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Image Url :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImageUrl)
        </dd>

        <dt>
            Price :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            Unit :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Unit)
        </dd>

        <dt>
            Room Description :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoomDescription)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "EditRoom", new { id = Model.RoomID }, new { @class = "btn btn-success" })
    @Html.ActionLink("Back to List", "RoomsList", null, new { @class = "btn btn-success" })
</p>
