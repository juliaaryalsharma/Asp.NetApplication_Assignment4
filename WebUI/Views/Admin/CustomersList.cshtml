@model IEnumerable<MidTermSolution.Models.Customer>

@{
    ViewBag.Title = "Customers";

}

<h2>Customers List</h2>

<p>
    @Html.ActionLink("Create New", "CreateCustomer", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Customer Name
        </th>
        <th>
            Address1
        </th>
        <th>
            Address2
        </th>
        <th>
            Town
        </th>
        <th>
           Province
        </th>
        <th>
            Postal Code
        </th>
        <th>
            Email Address
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Town)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Province)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostalCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCustomer", new { id=item.CustomerID }, new { @class = "btn btn-success" })
            @Html.ActionLink("Details", "DetailsCustomer", new { id=item.CustomerID }, new { @class = "btn btn-success" })
            @Html.ActionLink("Delete", "DeleteCustomer", new { id=item.CustomerID }, new { @class = "btn btn-success" })

        </td>
    </tr>
}

</table>
<br/>
@Html.ActionLink("Back to Admin", "Index", null, new { @class = "btn btn-success" })
