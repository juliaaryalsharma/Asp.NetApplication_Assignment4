@model MidTermSolution.Models.BookingRoom

@{
    ViewBag.Title = "Remove From Booking";
}

<h5>Are you sure you want to remove this from booking?</h5>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Image Url :
        </dt>

        <dd>
            @*<img style="width:25%" src="Product.ImageUrl" alt="Product.ProductDescription" />*@
           @Html.DisplayFor(model => model.Room.ImageUrl)
        </dd>

        <dt>
            Booking ID :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BookingID)
        </dd>

        <dt>
            Room Description :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Room.RoomDescription)
        </dd>

        <dt>
            Number of Rooms :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfRooms)
        </dd>

        <dt>
           Price :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Room.Price)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            <a href="@Url.Action("BookingSummary", "Rooms")" class="btn btn-primary">
                Back to List &nbsp;
                <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
            </a>
        </div>
    }
</div>
