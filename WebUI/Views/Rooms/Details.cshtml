@model MidTermSolution.Models.Room

@{
    ViewBag.Title = "Room Details";
}

<h2>Room Details</h2>

<div>
        <hr />
    <dl class="dl-horizontal">
        <dt>
            Image :
        </dt>

        <dd>
            <img style="width:15%" src="/img/@Model.ImageUrl" alt="@Model.RoomDescription" />
        </dd>

        <dt>
            Room Description :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoomDescription)
        </dd>

        <dt>
            Price :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>


    </dl>
</div>
<p>
    @Html.ActionLink("Add to Booking", "AddToBooking", new { id = Model.RoomID }, new { @class = "btn btn-success" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
</p>
