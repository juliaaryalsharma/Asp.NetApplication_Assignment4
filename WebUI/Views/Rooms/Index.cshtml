@model IEnumerable<MidTermSolution.Models.Room>

@{
    ViewBag.Title = "Rooms";
}
<h2>SMOKJ Hotel Rooms</h2>
<table class="table">
    <tr>
        <th>Image</th>
        <th>Price</th>
        <th>Room Description</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img style="width:15%" src="/img/@item.ImageUrl" alt="@item.RoomDescription" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomDescription)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.RoomID })
            </td>
        </tr>
    }
</table>
