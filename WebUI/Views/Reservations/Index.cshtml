        </div>
        <!-- /.row -->
        <!-- Exclusive Designs -->
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">Choose The Room That You Like</h2>
            </div>
            <div class="col-md-4 col-sm-6">
                <a href="portfolio-item.html">
                    <img class="img-responsive img-portfolio img-hover" src="/img/Image2.jpg" alt="">
                </a>
            </div>
            <div class="col-md-4 col-sm-6">
                <a href="portfolio-item.html">
                    <img class="img-responsive img-portfolio img-hover" src="/img/Image1.jpg" alt="">
                </a>
            </div>
