@model IEnumerable<MidTermSolution.Models.Reservation>

@{
    ViewBag.Title = "SMOJK Reservations";
}

<h2>SMOJK Reservations</h2>

<table class="table">
    <tr>
        <th>Reservation Date</th>
        <th>Customer ID</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerID)
            </td>
            <td>

                @Html.ActionLink("Details", "Details", new { id = item.ReservationID })

            </td>
        </tr>
    }

</table>
<body>


    <!-- Page Content -->
    <div class="container">
        <!-- Marketing Icons Section -->
        <div class="row">
